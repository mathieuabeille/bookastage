<h2>The stages available in your city</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
      <div class="row">
        <% @stages.each do |stage| %>
          <div class="col-sm-6">
            <div class="card-fond">
              <div class="card image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://unsplash.it/200/200')">
                <div class="card-category"><%= stage.name %></div>
              </div>
              <div class="card-description">
                <p><%= stage.city %>, Capacity: <%= stage.capacity %> people</p>
                <p>$ <%= stage.price %></p>
              </div>
              <%= link_to '', stage_path(stage), class: 'card-link' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6">
      <div id="map" style="width: 100%; height: 696px;"></div>
      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
            });
          });
        <% end %>
      <% end %>
    </div>
  </div>
</div>
